<!DOCTYPE html>
<html>

<head>
	<%- include ("../partials/commonhead") %>
</head>

<body class="sb-nav-fixed">
	<%- include ("../partials/header") %>
		<div id="layoutSidenav">
			<%- include ("../partials/sidebar") %>
				<div id="layoutSidenav_content">

					<main>
						<div class="container-fluid">
							<h1 class="mt-4">Edit Product</h1>
							<ol class="breadcrumb mb-4">
								<li class="breadcrumb-item active">
									<div class="ml-auto"><a href="/">Home</a> > Edit Product</div>
								</li>
							</ol>
							<div class="card mb-4">
								<div class="card-header">
									<i class="fas fa-barcode mr-1"></i>
									Edit Product detail
								</div>
								<div class="card-body">
									<form action="/products/update" method="POST">
										<div class="row">
											<input type="hidden" name="id" value="<%= product._id %>">
											<div class="form-group col-md-6">
												<label for="name">Product RFID #:</label>
												<input type="text" class="form-control" id="name" name="name" value="<%= product.name %>"
													aria-describedby="name" placeholder="Enter Product Name" disabled>
											</div>
										
											<div class="form-group col-md-6">
												<label for="productCategory">Select Category:</label>
												<%- dropdown(categories,'categoryId','Select Category','required', product.categoryId) %>
											</div>
										</div>
										
										<div class="row">
											<div class="form-group col-md-6">
												<label for="description">Description:</label>
												<textarea name="description" class="form-control"><%= product.description %> </textarea>
											</div>	
										</div>
										<div class="row">
											<div class="form-group col-md-12 text-right">
												<button type="submit" name="update" class="btn btn-outline-success"> &nbsp;&nbsp;&nbsp; Update
													&nbsp;&nbsp;&nbsp; </button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
					</main>
				</div>
			</div>
			<%- include ("../partials/commonscripts") %>
				<script>
					$('.btn-delete').click(function (e) {
						e.preventDefault();
						const url = $(this).attr('href');
						swal
							.fire({
								title: 'Are you sure?',
								text: 'You wont be able to recover this User!',
								type: 'warning',
								showCancelButton: true,
								confirmButtonText: 'Yes, delete User!',
							})
							.then(function (result) {
								if (result.value) {
									window.location.href = url;
								}
							});
					});
				</script>
	</body>